<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/view_title_red_noright" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="80dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/icon_logo" />

        <com.frxs.check.widget.ClearEditText
            android:id="@+id/cet_old_psw"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/circle_frame_border"
            android:drawableLeft="@mipmap/icon_password"
            android:drawablePadding="10dp"
            android:hint="请输入旧密码"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textSize="@dimen/twenty" />

        <com.frxs.check.widget.ClearEditText
            android:id="@+id/cet_new_psw"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/circle_frame_border"
            android:drawableLeft="@mipmap/icon_password"
            android:drawablePadding="10dp"
            android:hint="@string/hint_password"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textSize="@dimen/twenty" />

        <com.frxs.check.widget.ClearEditText
            android:id="@+id/cet_confirm_psw"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/circle_frame_border"
            android:drawableLeft="@mipmap/icon_password"
            android:drawablePadding="10dp"
            android:hint="@string/hint_password_two"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textSize="@dimen/twenty" />

        <Button
            android:id="@+id/btn_commit_psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/red_round_corner_rectangle"
            android:padding="10dp"
            android:text="确认提交"
            android:textColor="@android:color/white"
            android:textSize="@dimen/twenty_six" />

    </LinearLayout>

</LinearLayout>
